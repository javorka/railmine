<p id="notice"><%= notice %></p>

<h1>Sprints</h1>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Sprint', new_sprint_path, class: 'btn btn-success' %>
  </div>
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Start</th>
        <th>End</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @sprints.each do |sprint| %>
          <tr>
            <td><%= sprint.name %></td>
            <td><%= sprint.from %></td>
            <td><%= sprint.to %></td>
            <td>
              <%= link_to 'Edit', edit_sprint_path(sprint), class: 'btn btn-xs btn-default' %>
              <%= link_to 'Destroy', sprint, class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: 'Are you sure?' } %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>