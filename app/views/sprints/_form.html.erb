<%= form_with(model: sprint, local: true) do |form| %>
    <% if sprint.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(sprint.errors.count, "error") %> prohibited this sprint from being saved:</h2>

          <ul>
            <% sprint.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :sprint_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :from %>
      <%= form.text_field :from, id: :sprint_from, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :to %>
      <%= form.text_field :to, id: :to, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :project_id %>
      <%= form.collection_select :project_id, Project.order(:name), :id, :name, {:selected => sprint.project_id, :include_blank => false}, {id: 'sprint_project_id', class: 'form-control'} %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-primary' %>
      <%= link_to 'Back', sprints_path, class: 'btn btn-default' %>
    </div>
<% end %>

<script>
    $(document).ready(function () {
        $("#sprint_project_id").select2({theme: 'bootstrap'});
    });
</script>