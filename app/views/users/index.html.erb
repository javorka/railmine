<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
  </div>
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td>
              <%= link_to 'Show', user, class: 'btn btn-xs btn-primary' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-default' %>
              <%= link_to 'Destroy', user, class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>